{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'app.post.index'|trans }}{% endblock %}

{% block body %}
    <h2 class="display-1 w-75 m-auto mb-5">{{ 'app.post.index'|trans }}</h2>

    {% if posts|length > 4 %}
    <a href="{{ path('app_post_new') }}" class="float-end"><button class="btn btn-primary">{{ 'app.post.new'|trans }}</button></a>
    {% endif %}
    <div class="w-75 m-auto list-group list-group-flush">
        {% for post in posts %}
            <a href="{{ path('app_post_show', {id: post.id}) }}" class="list-group-item list-group-item-action">
                <article class="vstack gap-2 py-3">
                    <div class="py-3">
                        <h3 class="text-primary">{{ post.title }}</h3>
                        <small class="text-muted">{{ 'app.post.written_by'|trans }}
                            {{ post.createdBy.username }} {{ 'app.post.publication_date.on'|trans }} {{ post.createdAt|format_datetime('full', 'none') }}</small>
                    </div>
                    <p>{{ post.summary }}</p>
                    <span class="link-secondary">{{ 'app.post.list_link'|trans }}</span>
                </article>
            </a>
        {% else %}
            <p>{{ 'app.post.empty'|trans }}</p>
        {% endfor %}
        <a href="{{ path('app_post_new') }}"><button class="btn btn-primary">{{ 'app.post.new'|trans }}</button></a>
    </div>

{% endblock %}
