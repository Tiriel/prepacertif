{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="w-50 m-auto">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {label: 'Email'|trans}) }}
        {{ form_row(registrationForm.username, {label: 'Username'|trans}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Password'|trans}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'I agree to the Terms and conditions'|trans}) }}

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
