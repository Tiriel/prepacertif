{% extends 'base.html.twig' %}

{% block header %}
    <section class="mb-5 p-5 bg-light">
        <div class="w-75 mx-auto">
            <h1 class="display-1 lh-1">{{ 'app.blog_title'|trans }}</h1>
            <small class="text-muted fs-4">{{ 'app.blog_subtitle'|trans }}</small>
        </div>
    </section>
    <article class="w-50 mx-auto mt-5">
        <p class="lead">
            {{ 'app.blog_description'|trans }}
        </p>
    </article>
{% endblock %}

{% block body %}
    <section>
        <a class="link-secondary float-end" href="{{ path('app_post_index') }}">{{ 'app.post.list_link'|trans }}</a>
        <h3 class="w-75 m-auto">{{ 'app.posts.last'|trans }} :</h3>
        <div class="list-group list-group-flush">
            {% for post in posts %}
                <a href="{{ path('app_post_show', {id: post.id}) }}"
                   class="w-75 m-auto list-group-item list-group-item-action">
                    <article class="py-3">
                        <div class="py-3">
                            <h3 class="text-primary">{{ post.title }}</h3>
                            <small class="text-muted">{{ 'app.post.written_by'|trans }}
                                {{ post.createdBy.username }} {{ 'app.post.publication_date.on'|trans }} {{ post.createdAt|format_datetime('full', 'none') }}</small>
                        </div>
                        <p>{{ post.summary }}</p>
                        <span class="link-secondary">{{ 'app.post.view_full_link'|trans }}</span>
                    </article>
                </a>
            {% else %}
                <p>{{ 'app.post.empty'|trans }}</p>
            {% endfor %}
        </div>
    </section>
{% endblock %}
